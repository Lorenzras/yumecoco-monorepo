{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2020",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": false,
    "lib": [
      "es5",
      "ES2020",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "dist",
    "npm-scripts",
    "*eslint*",
    "*webpack*"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "files": [
    "./node_modules/@kintone/dts-gen/kintone.d.ts",
    "./node_modules/@types/docusign-esign/index.d.ts",
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ]
  },
  "paths": {
    "*": [
      "src/@t`ypes/*"
    ]
  },
  "references": [
    {
      "path": "./packages/kokoas-client"
    },
    {
      "path": "./packages/kokoas-server"
    },
    {
      "path": "./packages/api-kintone"
    },
    {
      "path": "./packages/is-even"
    },
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/config"
    },
    {
      "path": "./packages/helpers"
    },
    {
      "path": "./packages/utils-jest"
    },
  ]
}