{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "es5",
      "es2017",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "strictFunctionTypes": false
  },
  "exclude": [
    "dist",
    "npm-scripts"
  ],
  "include": [
    "**/*.ts", "**/*.tsx",
  ],
  "files": [
    "./node_modules/@kintone/dts-gen/kintone.d.ts",
  ],

  "rules": {
    "quotemark": [
      true,
      "single"
    ]
  },
  "references": [
    {
      "path": "./packages/kokoas-client/tsconfig.json"
    },
    {
      "path": "./packages/is-even/tsconfig.json"
    },
    {
      "path": "./packages/types/tsconfig.json"
    },
    {
      "path": "./packages/config/tsconfig.json"
    },
  ]
}