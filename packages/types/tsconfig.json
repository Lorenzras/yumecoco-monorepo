{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*",
    "./src/dtsgen/*.d.ts"
  ],
  "exclude": [
    "./dist"
  ]


}