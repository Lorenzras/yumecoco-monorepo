{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es2020",
    "target": "es2020",
    "lib": [
      "es2020", "dom"
    ],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": ["dist/**/*"]
}